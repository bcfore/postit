<% if logged_in? && @is_editable %>
  <p class='pull-right'>[<%= link_to 'edit this post', edit_post_path(@post) %>]</p>
<% end %>

<p>
  <%= render @post.categories %>
</p>

<%= render partial: 'shared/content_title', locals: { title: @post.title } %>

<p>
  <%= @post.description %>
</p>
<hr>

<% if logged_in? %>
  <%= render 'comments/form' %>
<% end %>

<h5>Comments:</h5>
<%= render @post.comments %>
